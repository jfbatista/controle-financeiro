generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  companies    Company[] @relation("UserCompanies")
  memberships  UserCompany[]
  auditLogs    AuditLog[]
}

model Company {
  id           Int       @id @default(autoincrement())
  name         String
  document     String?   @db.VarChar(32)
  contactEmail String?   @db.VarChar(255)
  ownerUserId  Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  owner        User      @relation("UserCompanies", fields: [ownerUserId], references: [id])
  members      UserCompany[]
  categories   Category[]
  paymentMethods PaymentMethod[]
  transactions Transaction[]
  recurringBills RecurringBill[]
  groups       Group[]
  auditLogs    AuditLog[]

  // SMTP Configuration
  smtpHost     String?   @db.VarChar(255)
  smtpPort     Int?
  smtpUser     String?   @db.VarChar(255)
  smtpPass     String?   @db.VarChar(255)
  smtpSecure   Boolean   @default(true)
  smtpFrom     String?   @db.VarChar(255)
}

model UserCompany {
  userId    Int
  companyId Int
  role      Role     @default(VIEWER) // Deprecated, using groupId
  groupId   Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
  company   Company  @relation(fields: [companyId], references: [id])
  group     Group?   @relation(fields: [groupId], references: [id])

  @@id([userId, companyId])
}

model Group {
  id          Int       @id @default(autoincrement())
  companyId   Int
  name        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  company     Company   @relation(fields: [companyId], references: [id])
  permissions GroupPermission[]
  users       UserCompany[]
}

model GroupPermission {
  id        Int      @id @default(autoincrement())
  groupId   Int
  permission String

  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

model Category {
  id         Int        @id @default(autoincrement())
  companyId  Int
  name       String
  type       CategoryType
  color      String?    @db.VarChar(16)
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  company    Company    @relation(fields: [companyId], references: [id])
  transactions Transaction[]
  recurringBills RecurringBill[]
}

model PaymentMethod {
  id         Int        @id @default(autoincrement())
  companyId  Int
  name       String
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  company    Company    @relation(fields: [companyId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id              Int           @id @default(autoincrement())
  companyId       Int
  type            TransactionType
  categoryId      Int
  paymentMethodId Int
  date            DateTime
  amount          Decimal       @db.Decimal(12, 2)
  description     String?
  createdByUserId Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  company         Company       @relation(fields: [companyId], references: [id])
  category        Category      @relation(fields: [categoryId], references: [id])
  paymentMethod   PaymentMethod @relation(fields: [paymentMethodId], references: [id])
  attachments     Attachment[]
}

model RecurringBill {
  id           Int           @id @default(autoincrement())
  companyId    Int
  type         TransactionType
  categoryId   Int
  amountExpected Decimal     @db.Decimal(12, 2)
  dueDay       Int
  description  String?
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  company      Company       @relation(fields: [companyId], references: [id])
  category     Category      @relation(fields: [categoryId], references: [id])
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
}


model AuditLog {
  id        Int      @id @default(autoincrement())
  action    String   // CREATE, UPDATE, DELETE, LOGIN, EXPORT
  entity    String   // Transaction, User, Company
  entityId  Int?
  details   Json?
  userId    Int
  createdAt DateTime @default(now())
  companyId Int

  user      User     @relation(fields: [userId], references: [id])
  company   Company  @relation(fields: [companyId], references: [id])

  @@index([companyId])
  @@index([userId])
  @@index([entity, entityId])
}

model Attachment {
  id            Int         @id @default(autoincrement())
  filename      String
  path          String
  mimetype      String
  size          Int
  transactionId Int
  createdAt     DateTime    @default(now())

  transaction   Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([transactionId])
}
